{
  "name": "dreme",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/react-hooks": "^3.0.0",
    "@types/enzyme": "^3.9.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.9.6",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link-context": "^1.0.18",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "polished": "^3.4.1",
    "postgraphile": "^4.4.2",
    "react": "^16.8.3",
    "react-apollo": "^2.5.1",
    "react-dom": "^16.8.3",
    "react-router-dom": "^5.0.1",
    "react-scripts": "2.1.5",
    "sequelize": "^5.13.0",
    "styled-components": "^5.0.0-beta.8",
    "typescript": "^3.3.3333",
    "uuid": "^3.3.2"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "scripts": {
    "start:client": "react-scripts start",
    "watch:server": "postgraphile -c postgres:///$npm_config_db --jwt-token-identifier public.jwt_token --jwt-secret $npm_config_secret -s public --cors --watch --enhance-graphiql --dynamic-json",
    "start": "npm-run-all --parallel watch:server start:client",
    "build": "yarn run build:css && purgecss -c ./purgecss.config.ts -o ./src/styles && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tslint": "tslint --project tsconfig.json --format stylish \"src/**/*.tsx\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "autoprefixer": "^9.4.9",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.3.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.15.3",
    "purgecss": "^1.0.1",
    "tslint": "5.9.1",
    "tslint-plugin-prettier": "^2.0.1",
    "yarn-run-all": "^3.1.1"
  }
}
