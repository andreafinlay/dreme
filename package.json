{
  "name": "dreme",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/react-hooks": "^3.0.0",
    "@types/enzyme": "^3.9.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.9.6",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@uirouter/react": "^0.8.9",
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.6.3",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "postgraphile": "^4.4.2",
    "react": "^16.8.3",
    "react-apollo": "^2.5.1",
    "react-dom": "^16.8.3",
    "react-scripts": "2.1.5",
    "sequelize": "^5.13.0",
    "typescript": "^3.3.3333",
    "uuid": "^3.3.2"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "scripts": {
    "build:css": "tailwind build ./src/styles/index.tailwind.css -c ./tailwind.config.ts -o ./src/index.css",
    "start:client": "yarn run build:css && purgecss -c ./purgecss.config.ts -o ./src/layouts && react-scripts start",
    "watch:server": "postgraphile --cors -c postgres:///$npm_config_db --watch --enhance-graphiql --dynamic-json",
    "start": "npm-run-all --parallel watch:server start:client",
    "build": "yarn run build:css && purgecss -c ./purgecss.config.ts -o ./src/styles && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tslint": "tslint --project tsconfig.json --format stylish \"src/**/*.tsx\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "autoprefixer": "^9.4.9",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.3.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.15.3",
    "purgecss": "^1.0.1",
    "tailwindcss": "^0.7.4",
    "tslint": "5.9.1",
    "tslint-plugin-prettier": "^2.0.1",
    "yarn-run-all": "^3.1.1"
  }
}
